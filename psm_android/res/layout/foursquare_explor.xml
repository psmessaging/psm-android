<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/fse_dist"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 mi"
            android:textSize="10dp" android:background="@drawable/btnbg" android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/fse_reco"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recommended"
            android:textSize="10dp" android:textColor="#FFFFFF" android:background="#000000"/>

        <Button
            android:id="@+id/fse_trend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trending"
            android:textSize="10dp" android:background="@drawable/btnbg" android:textColor="#FFFFFF"/>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/fse_recoscroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageButton
                android:id="@+id/fse_specials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_gray_rnd"
                android:padding="5dp"
                android:src="@drawable/specials_sm"
                android:tag="specials" />

            <ImageButton
                android:id="@+id/fse_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_gray_rnd"
                android:src="@drawable/food_sm"
                android:tag="food" android:padding="5dp"/>

            <ImageButton
                android:id="@+id/fse_coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_gray_rnd"
                android:src="@drawable/coffee_sm"
                android:tag="coffee" android:padding="5dp"/>

            <ImageButton
                android:id="@+id/fse_nightlife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_gray_rnd"
                android:src="@drawable/nightlife_sm"
                android:tag="drinks" android:padding="5dp"/>

            <ImageButton
                android:id="@+id/fse_shops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_gray_rnd"
                android:src="@drawable/shops_sm"
                android:tag="shops" android:padding="5dp"/>

            <ImageButton
                android:id="@+id/fse_ae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_gray_rnd"
                android:src="@drawable/arts_sm"
                android:tag="arts" android:padding="5dp"/>

            <ImageButton
                android:id="@+id/fse_outdoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_gray_rnd"
                android:padding="5dp"
                android:src="@drawable/tree_sm"
                android:tag="outdoors" />

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/fse_venlist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>

        <LinearLayout
            android:id="@+id/fse_prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerInParent="true">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Loading..."
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>